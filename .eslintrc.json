{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "react-app",
    "plugin:react/recommended",
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "sort-imports": [
      "warn",
      {
        "memberSyntaxSortOrder": [
          "single",
          "all",
          "multiple",
          "none"
        ],
        "allowSeparatedGroups": true,
        "ignoreDeclarationSort": true
      }
    ],
    "no-console": "warn",
    "no-empty": "warn",
    "no-extra-semi": "warn",
    "no-irregular-whitespace": "error",
    "@typescript-eslint/no-explicit-any": "warn",
    "react/prop-types": "off",
    "arrow-body-style": "off",
    "prefer-arrow-callback": "off"
  },
  "overrides": [
    {
      "files": [
        "public/*.js",
        "public/firebase/*.js"
      ],
      "rules": {
        "no-undef": "off",
        "no-restricted-globals": "off",
        "no-extra-semi": "off",
        "no-unused-vars": "off"
      }
    }
  ],
  "ignorePatterns": [
    "build",
    "android"
  ],
  "globals": {
    "JSX": "readonly",
    "google": "readonly"
  }
}